---
interface Props {
  date: string | Date;
}
const { date } = Astro.props;

// Ensure we have a real JS Date
const dt = typeof date === 'string' ? new Date(date) : date;
---

<time datetime={dt.toISOString()}>
  {dt.toLocaleDateString(undefined, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })}
</time>
