---
// src/components/BaseHead.astro
import '../styles/global.css';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const defaultImage = `${Astro.base}blog-placeholder-1.jpg`;
const { title, description, image = defaultImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const pageURL      = canonicalURL;
const feedURL      = new URL(`${Astro.base}rss.xml`, Astro.site).toString();
const imageURL     = new URL(image, Astro.site).toString();
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href={`${Astro.base}favicon.svg`} />
<link rel="stylesheet" href={`${Astro.base}styles/global.css`} />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={feedURL} />

<!-- Font preloads -->
<link
  rel="preload"
  href={`${Astro.base}fonts/atkinson-regular.woff`}
  as="font"
  type="font/woff"
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href={`${Astro.base}fonts/atkinson-bold.woff`}
  as="font"
  type="font/woff"
  crossorigin="anonymous"
/>

<link rel="canonical" href={pageURL} />
<title>{title}</title>
<meta name="description" content={description} />

<!-- Open Graph -->
<meta property="og:url"        content={pageURL} />
<meta property="og:title"      content={title} />
<meta property="og:description" content={description} />
<meta property="og:image"      content={imageURL} />

<!-- Twitter -->
<meta name="twitter:card"       content="summary_large_image" />
<meta property="twitter:url"    content={pageURL} />
<meta property="twitter:title"  content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image"  content={imageURL} />
